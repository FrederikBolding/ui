{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": { "src*": ["src*"] },
    "declaration": true,
    "declarationDir": "typings",
    "outDir": "./dist"
  },
  "include": ["src"],
  "inlineSources": true,
  "inlineSourceMap": true
}
