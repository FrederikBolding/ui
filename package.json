{
  "name": "@mycrypto/ui",
  "version": "1.0.0",
  "description": "React components for MyCrypto, following Atomic Design.",
  "repository": "MyCryptoHQ/ui",
  "keywords": [
    "react",
    "react-component"
  ],
  "author": "MyCryptoHQ",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib"
  ],
  "dependencies": {
    "typeface-lato": "^0.0.54"
  },
  "devDependencies": {
    "@storybook/react": "^3.4.10",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "jest": "^23.6.0",
    "jest-dom": "^1.12.0",
    "nwb": "^0.23.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-testing-library": "^5.0.1"
  },
  "peerDependencies": {
    "react": "^16.5.0",
    "react-dom": "^16.5.0"
  },
  "scripts": {
    "build": "nwb build-react-component && build-storybook",
    "clean": "nwb clean-module",
    "prepublishOnly": "yarn build",
    "start": "start-storybook -p 3000",
    "test": "jest"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupTestFrameworkScriptFile": "./src/setupTests"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "useTabs": false,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
