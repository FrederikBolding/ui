{
  "version": "1.0.0",
  "description": "React components for MyCrypto, following Atomic Design.",
  "repository": "MyCryptoHQ/ui",
  "keywords": [
    "react",
    "react-component"
  ],
  "author": "MyCryptoHQ",
  "license": "MIT",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "typeface-lato": "^0.0.54"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@emotion/core": "^0.13.0",
    "@storybook/react": "^4.0.0-alpha.21",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/storybook__react": "^3.0.9",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "eslint": "^5.6.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "jest-dom": "^1.12.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-testing-library": "^5.0.1",
    "rollup": "^0.66.0",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-postcss": "^1.6.2",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.1.1",
    "typescript": "^3.0.3",
    "webpack": "^4.19.0"
  },
  "peerDependencies": {
    "react": "^16.5.0",
    "react-dom": "^16.5.0"
  },
  "scripts": {
    "build": "rollup -c && build-storybook",
    "precommit": "lint-staged && yarn test",
    "start": "start-storybook -p 3000",
    "test": "jest"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "eslintConfig": {
    "extends": "plugin:jsx-a11y/recommended",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "jsx-a11y"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "lint-staged": {
    "*.{css,js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "useTabs": false,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
