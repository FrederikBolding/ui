{
  "name": "@mycrypto/ui",
  "version": "1.0.0",
  "description": "React components for MyCrypto, following Atomic Design.",
  "repository": "MyCryptoHQ/ui",
  "keywords": [
    "react",
    "react-component"
  ],
  "author": "MyCrypto",
  "license": "MIT",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "typeface-lato": "^0.0.54"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.4.11",
    "@storybook/addon-options": "^3.4.11",
    "@storybook/addons": "^3.4.11",
    "@storybook/react": "^3.4.10",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/storybook__addon-info": "^3.4.2",
    "@types/storybook__addon-options": "^3.2.2",
    "@types/storybook__react": "^3.0.9",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "jest-dom": "^1.12.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react": "^16.5.0",
    "react-docgen-typescript-loader": "^2.2.0",
    "react-dom": "^16.5.0",
    "react-testing-library": "^5.0.1",
    "rollup": "^0.66.1",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "typescript-eslint-parser": "^18.0.0"
  },
  "peerDependencies": {
    "react": "^16.5.0",
    "react-dom": "^16.5.0"
  },
  "scripts": {
    "build": "rollup -c && build-storybook",
    "precommit": "lint-staged && tsc --noEmit && yarn test",
    "report-coverage": " cat ./coverage/lcov.info | coveralls",
    "start": "start-storybook -p 3000",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "plugin:jsx-a11y/recommended",
    "parser": "typescript-eslint-parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "jsx-a11y",
      "react"
    ],
    "rules": {
      "react/destructuring-assignment": "error"
    }
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/__mocks__/styleMock.ts"
    },
    "testPathIgnorePatterns": [
      "dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "lint-staged": {
    "*.{css,js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext js,jsx,ts,tsx",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "useTabs": false,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  }
}
